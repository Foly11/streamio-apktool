<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
    </style>

    <!-- TV Theme -->
    <style name="TvTheme" parent="Theme.Leanback">
        <item name="browseTitleTextStyle">@style/TitleText</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- Player Theme -->
    <style name="PlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowFlags">fullscreen</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Card Styles -->
    <style name="MovieCard">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Text Input Style -->
    <style name="SearchInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorTertiary</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="LoadingProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <!-- Quality Indicator Styles -->
    <style name="QualityIndicator">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/quality_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Player Control Button Style -->
    <style name="PlayerControlButton">
        <item name="android:background">@drawable/player_button_background</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:tint">@color/textColorPrimary</item>
    </style>

</resources>